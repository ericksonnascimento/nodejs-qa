<!DOCTYPE html>
<html lang="en">
<%- include("partials/header")%>

    <body>
        <%- include("partials/navbar")%>

            <div class="container">
                <hr>
                <h1>Perguntas</h1>
                <hr>
                <a href="/ask" class="btn btn-primary">Perguntar</a>
                <hr>
                <% questions.forEach(question=>{%>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= question.title%>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/ask/<%= question.id%>" class="btn btn-primary">Responder</a>
                        </div>
                    </div>
                    <%})%>
            </div>

            <%- include("partials/scripts")%>
    </body>

</html>